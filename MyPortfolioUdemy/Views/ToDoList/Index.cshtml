@using MyPortfolioUdemy.DAL.Entities
@model List<ToDoList>
@{
    ViewData["Title"] = "Görev Listesi";
    ViewData["Description"] = "Görev listesi oluşturma ve güncelleme sayfası.";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0 ;
}

<div class="container-fluid">
    <h4 class="page-title">Görevler</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Görevler Listesi</div>
                </div>
                <div class="card-body">
                    <div class="card-sub">
                        Görevler ile ilgili işlemleri aşağıdaki panelden gerçekleştirebilirsiniz.
                    </div>
                    <table class="table mt-3">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">İçerik</th>
                                <th scope="col">Tarih</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                @foreach (var item in Model)
                                {
                                    count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Title</td>
                                    <td>@item.Date</td>
                                    @if (item.Status)
                                    {
                                        <td>
                                            <a href="/ToDoList/ChangeIsReadToFalse/@item.ToDoListId"
                                                class="btn btn-dark">Yapılmadı</a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <a href="/ToDoList/ChangeIsReadToTrue/@item.ToDoListId"
                                                class="btn btn-info">Yapıldı</a>
                                        </td>
                                    }
                                    <td><a href="/ToDoList/DeleteToDoList/@item.ToDoListId" class="btn btn-danger">Sil</a>
                                    </td>
                                    <td><a href="/ToDoList/UpdateToDoList/@item.ToDoListId"
                                            class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }
                            </tr>
                        </tbody>
                    </table>
                    <a href="/ToDoList/CreateToDoList/" class="btn btn-primary">Yeni Görev Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>
